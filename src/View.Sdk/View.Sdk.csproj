<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ApplicationIcon>Assets\icon.ico</ApplicationIcon>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<DocumentationFile>View.Sdk.xml</DocumentationFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>SDKs, shared classes, and dependencies for View.io services.</Title>
		<Version>0.2.15</Version>
		<Authors>View Systems Inc.</Authors>
		<Company>View Systems Inc.</Company>
		<Product>View.Sdk</Product>
		<Description>View.io is currently in ALPHA.  SDK, shared classes, and dependencies for interacting with View.io services.</Description>
		<Copyright>(c)2024 View Systems Inc.</Copyright>
		<PackageProjectUrl>https://github.com/view-io/viewsdk</PackageProjectUrl>
		<PackageIcon>logo.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/view-io/viewsdk</RepositoryUrl>
		<RepositoryType>github</RepositoryType>
		<PackageReleaseNotes>(ALPHA) Initial release.</PackageReleaseNotes>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Assets\icon.ico" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="Assets\icon.ico">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Include="Assets\logo.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="View.Sdk.xml">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Inputty" Version="1.0.12" />
		<PackageReference Include="RestWrapper" Version="3.0.20" />
		<PackageReference Include="View.Serializer" Version="1.0.0" />
	</ItemGroup>

</Project>
